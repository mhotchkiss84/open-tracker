@model IEnumerable<open_tracker.Models.ApplicationUser>

@{
    ViewData["Title"] = "Members";
}

<h1>Add Members</h1>

<form asp-action="AddMembers" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary btn-rounded btn-sm" /> |
            <a asp-action="AddMembers">Back to Full List</a>
        </p>
    </div>
</form>

@*<label asp-for="Name" class="control-label"></label>
<input asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>*@

<h4>All users </h4>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="">@Html.DisplayFor(modelItem => item.FirstName)</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="">@Html.DisplayFor(modelItem => item.LastName)</a>
                </td>
                <td>
                    |
                    <a asp-action="Delete" asp-route-id="">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ProjectMembers" asp-route-id="@Context.Request.RouteValues["id"]" class="btn btn-primary btn-rounded btn-sm ml-2">Back</a>
</div>