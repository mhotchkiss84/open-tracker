@model IEnumerable<open_tracker.Models.ApplicationUser>

@{
    ViewData["Title"] = "Members";
}

<h1 class="mb-4 mt-5 text-center">Add members to your project</h1>
<div class="mb-3 mt-3">
<form asp-action="AddMembers" method="get"class="mt-3 mb-3">
    <div class="form-actions no-color mt-3 mb-3">
        <p class="mt-3 mb-3">
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-dark btn-rounded btn-sm" />
            @*<a class="btn btn-dark btn-rounded btn-sm" asp-action="AddMembers">Clear filter</a>*@
        </p>
    </div>
</form>
</div>

@*<label asp-for="Name" class="control-label"></label>
<input asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>*@


<table class="table mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a class="btn btn-outline-success btn-rounded btn-sm" asp-action="AddMember" asp-route-id="@item.Id" asp-route-ProjectId="@Context.Request.RouteValues["id"]">Add</a>
                    @*<a asp-action="Edit" asp-route-id="10" asp-route-foo="bar">Edit</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="ProjectMembers" asp-route-id="@Context.Request.RouteValues["id"]" class="btn btn-secondary btn-rounded btn-sm ml-2">Back</a>
</div>