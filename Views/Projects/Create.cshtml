@model open_tracker.Models.Projects

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-5 mb-5 text-center">Create a new project</h1>
@*<hr />*@

<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group align-content-center justify-content-center">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group align-content-center justify-content-center">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group align-content-center justify-content-center">
                <label asp-for="Repo" class="control-label"></label>
                <input asp-for="Repo" class="form-control" />
                <span asp-validation-for="Repo" class="text-danger"></span>
            </div>
            <div class="form-group mx-auto mt-3 text-center">
                    <input type="submit" value="Create" class="btn btn-outline-success btn-rounded btn-sm text-center" />
                    <a class="btn btn-outline-secondary btn-rounded btn-sm text-center" asp-action="Index">Cancel</a>
                </div>
        </form>
        @*<div class="form-group mx-auto mt-3 text-center">
            <input type="submit" value="Create" class="btn btn-outline-success btn-rounded btn-sm mt-3 text-center" />
            <a class="btn btn-outline-secondary btn-rounded btn-sm mt-3 text-center" asp-action="Index">Cancel</a>
        </div>*@
    </div
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
