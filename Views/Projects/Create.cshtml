@model open_tracker.Models.Projects

@{
    ViewData["Title"] = "Create";
}

<h1>Create a new project</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Details" class="control-label"></label>
                <input asp-for="Details" class="form-control" />
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repo" class="control-label"></label>
                <input asp-for="Repo" class="form-control" />
                <span asp-validation-for="Repo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create btn-rounded btn-sm" class="btn btn-outline-success" />
                <a class="btn btn-outline-secondary btn-rounded btn-sm" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
