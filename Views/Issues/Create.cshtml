@model open_tracker.Models.Issues

@{ ViewData["Title"] = "Create"; }

<h1>Submit a new issue</h1>

<h4>Issues</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Priority</label>
                <select id="PriorityId" asp-for="PriorityId" class="form-control" asp-items="ViewBag.PriorityId"></select>
            </div>
            <div hidden class="form-group">
                <label class="control-label">Priority</label>
                <input id="ProjectId" asp-for="ProjectId" class="form-control" asp-items="ViewBag.PriorityId" value="@Context.Request.RouteValues["id"]">
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-route-id="@Context.Request.RouteValues["id"]" type="submit" value="Create" class="btn btn-outline-success btn-rounded btn-sm" />
                <a asp-action="Index" asp-route-id="@Context.Request.RouteValues["id"]" class="btn btn-outline-secondary btn-rounded btn-sm">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
